@using Pozdravlyator.Models;
@model IEnumerable<Pozdravlyator.Models.Person>
@{
    ViewData["Title"] = "Поздравлятор";
}


<h1>Список ближайших именинников</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDay)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@(item.BirthDay < DateTime.Now ? "highlight" : "")">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDay)
                </td>
            </tr>
        }
    </tbody>
</table>
